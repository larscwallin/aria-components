{
    "compilerOptions": {
        "alwaysStrict": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "lib": [
            "es6", "dom", "es2017.string"
        ],        
        "module": "esnext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "sourceMap": true,
        "target": "es5"
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
